    <style>
        h1 {
            color: red;
            text-align: center;
        }
        h2 {
            color: blue;
            font-weight: bold;
        }
        nav {
            text-align: right;
        }

        nav ul {
            list-style: none;
        }

        nav li {
            display: inline;
            padding: 5px;
            background-color: lime;
        }

        nav a:hover {
            color: red;
        }
        h2 + p {
            color: red;
        }
        img {
            display: none; width: 60px; height:60px;
        }
        .xemlogo:active + img {
            display: block;
        }
    </style>
</head>

